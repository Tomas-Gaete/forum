<!--We create the templates for all the pages and separate them in views so that we can choose wich one to render -->
{{#main}} <!-- index.php -->
<div class="content">

<h2>{{#str}} titulo, local_forum {{/str}}</h2>

<p>{{#str}} text, local_forum {{/str}} </p>

<div class="container text-center"> <!--we display the buttons at the center of the screen -->
    {{{create_button}}} <!-- render for button to redirect to create_forums -->
    {{{view_button}}} <!-- render for button to redirect to final_view -->
    </div>
</div>
{{/main}}


{{#Create}} <!-- create_forums.php -->
<div class="content">
<h2>{{#str}} B_title, local_forum {{/str}}</h2>

<p>{{#str}} B_page, local_forum {{/str}} </p>



</div>
{{/Create}}


{{#view}} <!-- view_forums.php -->
<body>
<div class="container_forum-content text-justify">
    <h2>{{#str}}view_title, local_forum{{/str}}</h2>
    <br>
    <div class="forum-list ">
        <div class="row">
            {{#forums}} <!-- this view allows us to display the data from the forums how we want-->
            <div class="col-md-4" style=" min-width: 33.3%; ">
                <div class="card d-flex flex-column" style="background-color: #f5f5f5; ">
                    <div class="card-body flex-grow-1">
                        <h3 class="card-title forum-title">{{title}}</h3>
                        <p class="card-text forum-theme">{{#str}} form_theme, local_forum {{/str}}: {{theme}}</p>
                        <p class="card-text forum-intro">{{#str}} form_intro_view, local_forum {{/str}}: {{intro}}</p>
                        <p class="card-text forum-criteria">{{#str}} criteria, local_forum {{/str}}: {{criteria}}</p>
                        <p class="card-text forum-info">{{#str}} bibliography, local_forum {{/str}}: {{info}}</p>
                    </div>
                        <div class="form-group bg-white" style=" padding: 20px; background-color: #f5f5f5;">
                            {{{inputs}}}
                        </div>
        </div>
        <br>
    </div>
        {{/forums}}
    <div class="container text-center"> <!--we display the buttons at the center of the screen -->
    {{{create_button}}} <!-- render for button to redirect to create_forums -->
    {{{final_button}}} <!-- render for button to redirect to final_view -->
    </div>
</div>
</body>
{{/view}}


