{{#view}}
<body>
<div class="container_forum-content text-justify">
    <h2>{{#str}}view_title, local_forum{{/str}}</h2>
    <br>
    <div class="forum-list ">
        <div class="row">
            {{#forums}}
            <div class="col-md-4" style=" min-width: 33.3%; ">
                <div class="card d-flex flex-column" style="background-color: #f5f5f5; ">
                    <div class="card-body flex-grow-1">
                        <h3 class="card-title forum-title">{{title}}</h3>
                        <p class="card-text forum-theme">{{#str}} form_theme, local_forum {{/str}}: {{theme}}</p>
                        <p class="card-text forum-intro">{{#str}} form_intro_view, local_forum {{/str}}: {{intro}}</p>
                        <p class="card-text forum-criteria">{{#str}} criteria, local_forum {{/str}}: {{criteria}}</p>
                        <p class="card-text forum-info">{{#str}} bibliography, local_forum {{/str}}: {{info}}</p>
                    </div>
                        <div class="form-group bg-white" style=" padding: 20px; background-color: #f5f5f5;">
                            {{{inputs}}}
                        </div>
        </div>
        <br>
    </div>
        {{/forums}}
    </div>
    </div>
</div>
</body>
{{/view}}

