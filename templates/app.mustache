
{{#main}}
<div class="content">

<h2>{{#str}} titulo, local_forum {{/str}}</h2>

<p>{{#str}} text, local_forum {{/str}} </p>
</div>
{{/main}}

{{#Btn}}
<div class="content">
<h2>{{#str}} B_title, local_forum {{/str}}</h2>

<p>{{#str}} B_page, local_forum {{/str}} </p>
</div>
{{/Btn}}

{{#view}}
<div class="container forum-content">
    <h2>{{#str}}view_title, local_forum{{/str}}</h2>
    <br>
    <div class="forum-list">
        <div class="row">
            {{#forums}}
            <div class="col-md-4">
                <div class="forum-entry">
                    <h3 class="forum-title">{{title}}</h3>
                    <p class="forum-theme">{{#str}} form_theme, local_forum {{/str}}: {{theme}}</p>
                    <p class="forum-intro">{{#str}} form_intro_view, local_forum {{/str}}: {{intro}}</p>
                    <p class="forum-criteria">{{#str}} criteria, local_forum {{/str}}: {{criteria}}</p>
                    <p class="forum-info"> {{#str}} bibliography, local_forum {{/str}}: {{info}}</p>

                    <label for="forumTextArea"></label>
                    <textarea class="form-control" id="forumTextArea" rows="4" placeholder="{{#str}} input_answer, local_forum {{/str}}"></textarea>
                    <button type="submit" class="btn btn-primary mt-3">{{#str}}submit_button, local_forum{{/str}}</button>

                </div>
                <br>
            </div>
            {{/forums}}
        </div>
    </div>
</div>
{{/view}}

